{
    "name": "turbo-nextjs-nestjs-monorepo",
    "version": "0.0.2-0",
    "description": "A monorepo for a Turbo Next.js and Nest.js project",
    "author": "@hubts",
    "license": "MIT",
    "repository": "https://github.com/hubts/turbo-nextjs-nestjs-monorepo.git",
    "private": true,
    "scripts": {
        "build": "turbo run build",
        "dev": "turbo run dev",
        "lint": "turbo run lint",
        "format": "prettier --write \"**/*.{ts,tsx,md}\"",
        "check-types": "turbo run check-types",
        "git": "./scripts/skyrocket.sh"
    },
    "devDependencies": {
        "commitizen": "^4.3.1",
        "cz-emoji-conventional": "^1.2.1",
        "prettier": "^3.5.3",
        "turbo": "^2.5.4",
        "typescript": "5.8.2"
    },
    "config": {
        "commitizen": {
            "path": "cz-emoji-conventional",
            "disableScopeLowerCase": true,
            "disableSubjectLowerCase": true
        }
    },
    "engines": {
        "node": ">=18"
    },
    "packageManager": "yarn@4.9.2+sha512.1fc009bc09d13cfd0e19efa44cbfc2b9cf6ca61482725eb35bbc5e257e093ebf4130db6dfe15d604ff4b79efd8e1e8e99b25fa7d0a6197c9f9826358d4d65c3c",
    "workspaces": [
        "apps/*",
        "packages/*"
    ]
}
